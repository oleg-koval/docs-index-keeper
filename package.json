{
  "name": "docs-index-keeper",
  "version": "1.0.0",
  "description": "Keep your docs/README.md index in sync automatically. When you add or change Markdown files under docs/, a pre-commit hook or CI step updates the index tableâ€”no manual edits, no forgotten entries.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "docs-index-keeper": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "check": "npm run build && npm run test"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "docs",
    "documentation",
    "markdown",
    "index",
    "readme",
    "pre-commit",
    "husky",
    "git-hooks",
    "cli",
    "automation",
    "docs-index",
    "doc-index",
    "runbook",
    "knowledge-base"
  ],
  "license": "MIT",
  "author": "Oleg Koval <oleg-koval@users.noreply.github.com> (https://github.com/oleg-koval)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oleg-koval/docs-index-keeper.git"
  },
  "homepage": "https://github.com/oleg-koval/docs-index-keeper#readme",
  "bugs": {
    "url": "https://github.com/oleg-koval/docs-index-keeper/issues"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.16.0",
    "semantic-release": "^24.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
